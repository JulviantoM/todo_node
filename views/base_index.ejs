		<link rel="stylesheet" type="text/css" href="css/fontawesome/all.css">
		<link rel="stylesheet" type="text/css" href="css/bootstrap/bootstrap.min.css">
		<style type="text/css">
			a {
			  text-decoration: none;
			}
		  </style>
		<script type="text/javascript" src="js/bootstrap/bootstrap.min.js"></script>
		<script type="text/javascript" src="js/jquery/jQueryv3.6.0.min.js"></script>
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
			<div class="container">
			  <a class="navbar-brand fs-2" href="">To Do</a>
			  <!-- <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			  </button>
			  <div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav fs-5 ms-auto">
				  <li class="nav-item mx-0 mx-lg-1">
					<a class="nav-link py-3 px-0 px-lg-3 rounded active" aria-current="page" href="/">Main Page</a>
				  </li>
				</ul>
			  </div> -->
			</div>
		  </nav>
	  
		  <div class="container col-md-10 offset-md-1 overflow-auto mt-3" style="margin-bottom: 160px">
			  <div class="row">
				  <h3>Add Task</h3>
				  <div class="col">
					  <form class="form-inline" action="/create" method="post">
						  <input name="textInput" type="text" class="form-control mb-2 me-sm-2" placeholder="Type here..." required="True">
						  <button type="submit" class="btn btn-primary mb-2 float-end">Submit</button>
					  </form>
				  </div>
			  </div>
			  <div class="row mt-4">
				  <div class="col">
					  <ul class="list-group">
						  <% context.forEach(function(data){ %>
							  <% if (data.completed){ %>
							  <li class="list-group-item text-decoration-line-through">
								  <%= data.task %>
								  <form class="float-end" action="/delete/<%= data.id %>" method="post">
									  <button type="submit" class="btn btn-sm btn-outline-danger">❌</button>
								  </form>
								  <form class="float-end">
									  <button type="submit" class="btn btn-sm btn-outline-success me-2 disabled">✅</button>
								  </form>
							  </li>
							  <% } else { %>
							  <li class="list-group-item">
								  <%= data.task %>
								  <form class="float-end" action="/delete/<%= data.id %>" method="post">
									  <button type="submit" class="btn btn-sm btn-outline-danger">❌</button>
								  </form>
								  <form class="float-end" action="/complete/<%= data.id %>" method="post">
									  <button type="submit" class="btn btn-sm btn-outline-success me-2">✅</button>
								  </form>
							  </li>
						  <% }}) %>
					  </ul>
				  </div>
			  </div>
		  </div>

		  <footer class="footer bg-dark w-100" style="position: fixed;bottom: 0;">
			<div class="container py-4">		  
			  <div class="row">
				<div class="col text-white text-center">
				  Copyright © 2021 --- MJ-Dev
				</div>
			  </div>
			</div>
		  </footer>
	</body>
</html>